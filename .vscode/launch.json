    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Client",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ],
    "compounds": [
        {
            "name": "server-client",
            "configurations": [
                "Launch Server",
                "Launch Client"
            ],
            "stopAll": true
        }
    ]
}